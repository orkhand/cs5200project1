<% if (lastPage > 2) { %>

    <nav aria-label="Events Pagination">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="<%= '/events/?page=' + (currentPage - 1) +'&q=' + query + '&eventsBySportQuery=' + eventsBySportQuery %>">Previous</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="<%= '/events/?page=' + 1 +'&q=' + query + '&eventsBySportQuery=' + eventsBySportQuery %>"><%= 1 %></a>
        </li>
        <li>...</li>
  
        <% for(let p = Math.max(currentPage-5, 2);
          p <= (currentPage+5) && p <= lastPage;
          p+=1) { %>
          <li class="<%= 'page-item' + ( p === currentPage ? ' active' : '') %>">
            <a class="page-link" href="<%= '/events/?page=' + p +'&q=' + query + '&eventsBySportQuery=' + eventsBySportQuery %>"><%= p %></a>
          </li>
        <% } %>

        <li>...</li>
        <li class="page-item">
          <a class="page-link" href="<%= '/events/?page=' + lastPage +'&q=' + query + '&eventsBySportQuery=' + eventsBySportQuery %>"
            ><%= lastPage %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="<%= '/events/?page=' + (currentPage + 1) +'&q=' + query + '&eventsBySportQuery=' + eventsBySportQuery %>">Next</a>
        </li>
      </ul>
    </nav>
  <% } else { %>
    <div>No pagination <%= lastPage %> </div>
  <% } %>
  